  <test name="Variables" section="etag">
    <template>{'Hello {{word}}!'}</template>
    <hash>{'{"word": "world"}'}</hash>
    <output><div>Hello world!</div></output>
    <parseTree>
      <multi>
        <static>Hello </static>
        <etag name="word"/>
        <static>!</static>
      </multi>
    </parseTree>
  </test>
